<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="main" template="/WEB-INF/main/main.jsp">
		<put-attribute name="section" value="/WEB-INF/main/section.jsp"/>
		<put-attribute name="newsletter" value="/WEB-INF/main/newsletter.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/main/footer.jsp"/>
	</definition>
	<definition name="*/*" extends="main">
		<put-attribute name="section" value="/WEB-INF/{1}/{2}.jsp"/>
	</definition>
	<definition name="*/*/*" extends="main">
		<put-attribute name="section" value="/WEB-INF/{1}/{2}/{3}.jsp"/>
	</definition>
</tiles-definitions>



